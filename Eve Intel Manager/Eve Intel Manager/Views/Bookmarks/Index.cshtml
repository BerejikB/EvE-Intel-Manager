@model IEnumerable<Eve_Intel_Manager.Entities.Bookmarks>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Secure/_DashboardLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Xcoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ycoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zcoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Xcoord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ycoord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zcoord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FolderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookmarkID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookmarkID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookmarkID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
